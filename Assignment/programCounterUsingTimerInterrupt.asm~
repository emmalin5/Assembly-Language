ORG 0000H
JMP 0050H
ORG 0003H
RETI
ORG 000BH
JMP TIMER0_INTR
ORG 0013H
RETI
ORG 001BH
RETI
ORG 0023H
RETI
ORG 0050H
MOV P2, #0FFH
ORL IE, #10000010B
ANL IE, #11100010B
MOV SP, #08H
MOV R7, #00H
CLR TR0
MOV TL0, #0FDH
MOV TH0, #0ECH
MOV R0, #1
MOV TMOD, #00000001B
SETB TR0
JMP $
TIMER0_INTR:
DJNZ R0, RETURN
INC R7
MOV A, R7
CPL A
MOV P2, A
MOV R0, #1
RETURN: MOV TH0, #0FDH
MOV TL0, #0ECH
RETI
END
